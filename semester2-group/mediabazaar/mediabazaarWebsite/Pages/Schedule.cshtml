                }
            }
        </div>
    </div>
    <div class="col">
        <div class="weekDays">Thursday</div>
        <div>
            @foreach (Shift a in Model.Shifts)
            {
                if (a.Start.DayOfWeek == DayOfWeek.Thursday)
                {
                    <p class="shift" style="position: absolute; top: @Model.CalculateTop(a); height: @Model.CalculateHeight(a); background-color: @Model.GetBackground()">@a.ToString()</p>
                }
            }
        </div>
    </div>
    <div class="col">
        <div class="weekDays">Friday</div>
        <div>
            @foreach (Shift a in Model.Shifts)
            {
                if (a.Start.DayOfWeek == DayOfWeek.Friday)
